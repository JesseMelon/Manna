ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

.PHONY: clean prebuild

SHELLTYPE := posix
ifeq ($(shell echo "test"), "test")
	SHELLTYPE := msdos
endif

# Configurations
# #############################################

ifeq ($(origin CC), default)
  CC = gcc
endif
ifeq ($(origin CXX), default)
  CXX = g++
endif
ifeq ($(origin AR), default)
  AR = ar
endif
RESCOMP = windres
INCLUDES += -Iinclude -Isrc
FORCE_INCLUDE +=
ALL_CPPFLAGS += $(CPPFLAGS) -MD -MP $(DEFINES) $(INCLUDES)
ALL_RESFLAGS += $(RESFLAGS) $(DEFINES) $(INCLUDES)
LIBS +=
LDDEPS +=
LINKCMD = $(CC) -o "$@" $(OBJECTS) $(RESOURCES) $(ALL_LDFLAGS) $(LIBS)
define PREBUILDCMDS
endef
define PRELINKCMDS
endef
define POSTBUILDCMDS
endef

ifeq ($(config),debug)
TARGETDIR = ../bin/Debug-linux-x86_64/manna_engine
TARGET = $(TARGETDIR)/libmanna_engine.so
OBJDIR = ../obj/Debug-linux-x86_64/manna_engine
DEFINES += -DMN_PLATFORM_LINUX -DMN_SO_EXPORT -DMN_DEBUG
ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -m64 -fPIC -g
ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -m64 -fPIC -g
ALL_LDFLAGS += $(LDFLAGS) -L/usr/lib64 -m64 -shared -Wl,-soname=libmanna_engine.so

else ifeq ($(config),release)
TARGETDIR = ../bin/Release-linux-x86_64/manna_engine
TARGET = $(TARGETDIR)/libmanna_engine.so
OBJDIR = ../obj/Release-linux-x86_64/manna_engine
DEFINES += -DMN_PLATFORM_LINUX -DMN_SO_EXPORT -DMN_RELEASE
ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -m64 -O2 -fPIC
ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -m64 -O2 -fPIC
ALL_LDFLAGS += $(LDFLAGS) -L/usr/lib64 -m64 -shared -Wl,-soname=libmanna_engine.so -s

else ifeq ($(config),dist)
TARGETDIR = ../bin/Dist-linux-x86_64/manna_engine
TARGET = $(TARGETDIR)/libmanna_engine.so
OBJDIR = ../obj/Dist-linux-x86_64/manna_engine
DEFINES += -DMN_PLATFORM_LINUX -DMN_SO_EXPORT -DMN_DIST
ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -m64 -O2 -fPIC
ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -m64 -O2 -fPIC
